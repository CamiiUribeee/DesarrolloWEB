---
import Layout from "../layouts/Layout.astro"
import Button from "../components/Button.astro"
import { Icon } from 'astro-icon/components';

const buttons = ["Aceptar", "enviar", "cancelar", "otro" ];
---

<Layout title="contacto">
    este es el contacto
    <Button del="true">
        <span slot="text">
            Boton 1 
        </span>
        <svg slot="start-icon" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-3">
            <path stroke-linecap="round" stroke-linejoin="round" d="M9 15 3 9m0 0 6-6M3 9h12a6 6 0 0 1 0 12h-3" />
        </svg>
           
          
        
    </Button>

    <Button>
        
    </Button>
    <Icon class="size-28" name="mdi:guitar-electric" />
    <Icon class="size-96" name="svg-spinners:blocks-shuffle-3" />
    <span class="font-sans">Con mi propia fuente</span>
    {buttons.map((text) => {
        return <Button><span slot="text">{text}</span></Button>
    })}

</Layout>

